---
interface Props {
  text?: string;
  fontName?: string;
  fontWeights?: string;
  className?: string;
}
const {
  text = "Welcome to China, Happy meet you in QingDao!",
  fontName = "Caveat",
  fontWeights = "400;500;600;700",
  className = "",
} = Astro.props;
// 构建Google字体URL
const fontUrl = `https://fonts.googleapis.com/css2?family=${fontName.replace(" ", "+")}:wght@${fontWeights}&display=swap`;---

<!-- Google字体预连接和加载 -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href={fontUrl} rel="stylesheet" />

<!-- 欢迎文字 -->
<p class={`welcome-text ${className}`}>
  {text}
</p>

<style define:vars={{ fontName }}>
  .welcome-text {
    font-family: var(--fontName), cursive;
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.4;
    margin: 0.5rem 0;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  /* 响应式调整 */
  @media (max-width: 768px) {
    .welcome-text {
      font-size: 1.25rem;
    }
  }

  @media (min-width: 1024px) {
    .welcome-text {
      font-size: 1.75rem;
    }
  }
</style>

