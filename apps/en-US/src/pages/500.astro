---
import Layout from "@/layouts/Layout.astro";
import { Meta } from "@rxdrag/website-lib";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
---

<Layout>
  <Header />
  <Meta title="500 - Server Error" slot="meta" />
  <main class="container mt-36 mx-auto px-4 py-16 text-center">
    <div
      class="max-w-2xl mx-auto bg-gradient-to-b from-white to-sky-50 rounded-xl overflow-hidden p-10 my-12 border border-sky-100"
    >
      <div class="flex flex-col items-center space-y-8">
        <div class="bg-red-100 p-5 rounded-full">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-20 w-20 text-red-600"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h1 class="text-4xl font-bold text-gray-900 tracking-tight">
          Server Error
        </h1>
        <p class="text-xl text-gray-600 max-w-lg leading-relaxed">
          Sorry, our server encountered an issue. Our technical team has been
          notified and is working to resolve the problem.
        </p>
        <div class="mt-8 border-t border-sky-100 pt-8 w-full">
          <div class="flex flex-col sm:flex-row justify-center gap-6">
            <a
              href="/"
              class="inline-flex items-center justify-center px-8 py-4 border border-transparent text-base font-medium rounded-lg text-white bg-sky-600 hover:bg-sky-700 transition-all transform hover:-translate-y-1 shadow-sm hover:shadow"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 mr-2"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
                  clip-rule="evenodd"></path>
              </svg>
              Return to Home
            </a>
            <button
              onclick="window.location.reload()"
              class="inline-flex items-center justify-center px-8 py-4 border border-sky-200 text-base font-medium rounded-lg text-sky-700 bg-white hover:bg-sky-50 transition-all transform hover:-translate-y-1 shadow-sm hover:shadow"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 mr-2 text-sky-500"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z"
                  clip-rule="evenodd"></path>
              </svg>
              Refresh Page
            </button>
          </div>
        </div>
      </div>
    </div>
  </main>
  <FooterCTA />
  <Footer />
  <Globals />
</Layout>

<script>
  // Log error information
  document.addEventListener("DOMContentLoaded", () => {
    console.error(
      "An error occurred during page load, user was redirected to 500 error page"
    );
  });
</script>
