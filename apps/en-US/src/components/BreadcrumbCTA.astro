---
import { ModalTrigger } from "@rxdrag/website-lib";

interface Props {
  title: string;
  hideContact?: boolean;
}
const { title, hideContact } = Astro.props;---

<section class="m-h-20 w-full mt-24 z-0">
  <div class="relative flex py-16 flex-1 flex-col items-start">
    <div class="absolute inset-0 bg-[#f5f5f5] opacity-90 z-0"></div>
    <div
      class="container flex flex-col lg:flex-row lg:justify-between items-center z-[1]"
    >
      <div class="flex-1 flex flex-col gap-2 mb-4 lg:mb-0">
        <p class="text-4xl font-bold z-10">{title}</p>
        <div class="z-10">
          <slot>
            <div>
              Your professional water treatment chemicals
              <b class="text-xl mx-2"> Supplier </b>
              in China.
            </div>
          </slot>
        </div>
      </div>
      <div class={hideContact ? "hidden" : ""}>
        <ModalTrigger
          as="button"
          class="whitespace-nowrap inline-flex btn btn-primary btn-lg"
          callToAction="Contact us"
          openableKey="enquiry-modal"
        >
          Contact us
        </ModalTrigger>
      </div>
    </div>
  </div>
</section>
