---
import { rx } from "../lib";
import { Link } from "@rxdrag/website-lib";
const categories = await rx.getProductCategories();
const config = (await rx.getTheme())?.config;---

<footer aria-labelledby="footer-heading" class="w-full bg-gray-50 mt-0">
  <h2 class="sr-only" id="footer-heading">
    Footer
  </h2>
  <div class="mx-auto max-w-7xl pt-12 pl-4">
    <div class="flex flex-col lg:grid lg:grid-cols-4 lg:gap-4">
      <div class="flex flex-col items-start gap-4">
        <div class="flex items-end">
          <img alt="kingnod logo" class="h-12 lg:px-4" src="https://liaoker-storage.oss-cn-qingdao.aliyuncs.com/4299262263296/e00e8e1f-f906-4feb-bc28-094b1db910be.png" />
        </div>
        <p class="text-sm leading-6 text-gray-600 lg:py-4 lg:px-4">
          Lorem Ipsum Tech Solutions Co.,Ltd. is your trusted digital innovation
          partner providing cutting-edge technology services worldwide.
        </p>
        <div class="flex gap-4 lg:pl-4">
          <a class="text-sm leading-6 text-gray-600 hover:text-blue-900" href="/about">
            About
          </a>
          <Link class="text-sm leading-6 text-gray-600 hover:text-blue-900" type="products">
            Products
          </Link>
          <Link class="text-sm leading-6 text-gray-600 hover:text-blue-900" type="posts">
            Blog
          </Link>
          <a class="text-sm leading-6 text-gray-600 hover:text-blue-900" href="/posts">
            Blog
          </a>
          <a class="text-sm leading-6 text-gray-600 hover:text-blue-900" href="/contact">
            Contact
          </a>
        </div>
      </div>
      <div class="hidden lg:flex flex-col items-start gap-4 lg:col-span-2 lg:px-24">
        <h2 class="text-xl py-4">
          Products
        </h2>
        <div class="grid grid-cols-2 gap-2">
{
            categories.map((category) => (<Link class="min-w-[50%] hover:underline leading-8" type="product-category" to={category.slug}>
            {category.name}
            </Link>))
          }
        </div>
      </div>
      <div class="hidden lg:flex flex-col items-start gap-4">
        <h2 class="text-xl py-4">
          Contact
        </h2>
        <ul class="text-sm flex flex-col gap-4">
          <li class="flex items-start">
            <span class="mr-2 opacity-60">
              <svg aria-hidden="true" class="w-5 h-5" focusable="false" height="1.25rem" viewBox="0 0 24 24" width="1.25rem">
                <path d="M6.54 5c.06.89.21 1.76.45 2.59l-1.2 1.2c-.41-1.2-.67-2.47-.76-3.79zm9.86 12.02c.85.24 1.72.39 2.6.45v1.49c-1.32-.09-2.59-.35-3.8-.75zM7.5 3H4c-.55 0-1 .45-1 1 0 9.39 7.61 17 17 17 .55 0 1-.45 1-1v-3.49c0-.55-.45-1-1-1-1.24 0-2.45-.2-3.57-.57-.1-.04-.21-.05-.31-.05-.26 0-.51.1-.71.29l-2.2 2.2c-2.83-1.45-5.15-3.76-6.59-6.59l2.2-2.2c.28-.28.36-.67.25-1.02C8.7 6.45 8.5 5.25 8.5 4c0-.55-.45-1-1-1" />
              </svg>
            </span>
            <span class="mr-1 font-bold">
              Tel:
            </span>
            {config?.tel}
          </li>
          <li class="flex items-start">
            <span class="mr-2 opacity-60">
              <svg aria-hidden="true" class="w-5 h-5" focusable="false" height="1.25rem" viewBox="0 0 24 24" width="1.25rem">
                <path d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2zm-2 0-8 5-8-5zm0 12H4V8l8 5 8-5z" />
              </svg>
            </span>
            <span class="mr-1 font-bold">
              Email:
            </span>
            <a prefix="mailto:" href={`mailto:${config?.email}`}>
              {config?.email}
            </a>
          </li>
          <li class="flex items-start">
            <span class="mr-2 opacity-60">
              <svg aria-hidden="true" class="w-5 h-5" focusable="false" height="1.25rem" viewBox="0 0 24 24" width="1.25rem">
                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7M7 9c0-2.76 2.24-5 5-5s5 2.24 5 5c0 2.88-2.88 7.19-5 9.88C9.92 16.21 7 11.85 7 9" />
                <circle cx="12" cy="9" r="2.5" />
              </svg>
            </span>
            <span>
              <b class="mr-1">
                Address:
              </b>
              {config?.address}
            </span>
          </li>
        </ul>
      </div>
    </div>
    <div class="mt-16 border-t border-gray-900/10 pt-8 sm:mt-20 lg:mt-24 pb-1 flex justify-between">
      <p class="text-xs leading-5 text-gray-500">
        Â©
        {new Date().getFullYear()}
        Qingdao Kingnod Group Co.,Ltd. All rights reserved.
      </p>
    </div>
  </div>
</footer>