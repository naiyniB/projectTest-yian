---
import { Motion, ModalTrigger } from "@rxdrag/website-lib";
---

<section class="w-full overflow-hidden bg-gray-100 lg:mt-20 mt-4">
  <Motion class="mx-auto max-w-4xl xl:max-w-7xl px-6 py-12 lg:py-24 flex flex-col items-center lg:flex-row lg:items-center lg:justify-center lg:px-8 gap-10" whileInView="fade-up">
    <h2 class="text-3xl text-gray-900 text-center leading-[60px]">
      You can find the
      <b class="mx-2">
        right
      </b>
      products that
      <b class="mx-2">
        meet
      </b>
      your needs from us!
    </h2>
    <div class="relative flex flex-row items-center">
      <div>
        <ModalTrigger as="button" class="whitespace-nowrap inline-flex btn btn-primary btn-lg" callToAction="Contact us" openableKey="enquiry-modal">
          Contact us
        </ModalTrigger>
      </div>
      <Motion class="lg:absolute lg:-top-16 hidden lg:flex lg:-right-28 lg:rotate-90 opacity-0" initial={{
          rotate: 60,
          opacity: 0,
          translateX: 30,
          translateY: -40,
        }} whileInView={{
          enter: {
            to: {
              rotate: 0,
              opacity: 1,
              translateX: 0,
              translateY: 0,
            },
            duration: 1.3,
            ease: "power3.out",
            delay: 0.5,
          },
          exit: {
            to: {
              rotate: 60,
              opacity: 0,
              translateX: 30,
              translateY: -40,
            },
          },
          once: true,
        }}>
        <img alt="indicator" src="https://liaoker-storage.oss-cn-qingdao.aliyuncs.com/4299262263296/df4dc004-92de-4742-984a-4d3fb65f5bff.png" />
      </Motion>
    </div>
  </Motion>
</section>