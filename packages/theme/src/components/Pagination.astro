---
import { Link } from "@rxdrag/website-lib";
interface Props {
  pagination: PaginationData;
}
const {
  pages,
  hasPreviousPage,
  hasNextPage,
  previousPageUrl,
  nextPageUrl,
  pageUrls,
  currentPage,
} = Astro.props?.pagination || {};
// 检查是否只有一页，如果是则不显示分页
const shouldShowPagination = pages?.length > 1;---

{
  shouldShowPagination && <nav class="flex items-center justify-between border-t border-gray-200 sm:px-0 mt-8">
  <div class="-mt-px flex w-0 flex-1">
  {
  hasPreviousPage &&     <Link to={previousPageUrl} class="inline-flex items-center border-t-2 border-transparent pr-1 pt-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">
  <svg class="mr-3 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
  <path fill-rule="evenodd" d="M18 10a.75.75 0 01-.75.75H4.66l2.1 1.95a.75.75 0 11-1.02 1.1l-3.5-3.25a.75.75 0 010-1.1l3.5-3.25a.75.75 0 111.02 1.1l-2.1 1.95h12.59A.75.75 0 0118 10z" clip-rule="evenodd" />
  </svg>
  Previous
  </Link>
  }
  </div>
  <div class="hidden md:-mt-px md:flex">
  {
  pages.map((pageNum) => pageNum === currentPage ? (<span class="inline-flex items-center border-t-2 border-blue-500 px-4 pt-4 text-sm font-medium text-blue-600">
  {pageNum}
  </span>) : (<Link to={pageUrls[pageNum]} class="inline-flex items-center border-t-2 border-transparent px-4 pt-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">
  {pageNum}
  </Link>))
  }
  </div>
  <div class="-mt-px flex w-0 flex-1 justify-end">
  {
  hasNextPage &&     <Link to={nextPageUrl} class="inline-flex items-center border-t-2 border-transparent pl-1 pt-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">
  Next
  <svg class="ml-3 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
  <path fill-rule="evenodd" d="M2 10a.75.75 0 01.75-.75h12.59l-2.1-1.95a.75.75 0 111.02-1.1l3.5 3.25a.75.75 0 010 1.1l-3.5 3.25a.75.75 0 11-1.02-1.1l2.1-1.95H2.75A.75.75 0 012 10z" clip-rule="evenodd" />
  </svg>
  </Link>
  }
  </div>
  </nav>
}